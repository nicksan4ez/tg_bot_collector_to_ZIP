# Пример .env
# Укажите реальный BOT_TOKEN перед запуском
BOT_TOKEN=your_bot_token_here
# Разрешённые user_id через запятую (оставьте пустым чтобы разрешить всем)
ALLOWED_USERS=00000000
# В контейнере TMP_ROOT будет /data/tmp (см. docker-compose), но можно указать хостную папку при запуске
TMP_ROOT=/data/tmp
ZIP_NAME=Archive.zip
ARCHIVE_DELAY=5

